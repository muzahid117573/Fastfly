<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/background3"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@color/background3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/menu_icon"
            android:padding="2dp"
            android:background="#F6F4F4"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_baseline_sort_24" />

        <ImageView
            android:id="@+id/logoutbutton"
            android:padding="2dp"
            android:background="#F6F4F4"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:src="@drawable/ic_baseline_exit_to_app_24" />
    </RelativeLayout>


        <LinearLayout
            android:background="@color/background3"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="5dp"
                app:cardElevation="6dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:fontFamily="cursive"
                    android:id="@+id/app_name"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Track Your Products"
                    android:textColor="@color/background6"
                    android:textSize="35sp" />

                <RelativeLayout
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/white"
                    android:layout_below="@id/app_name"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6">


                        <EditText
                            android:padding="10dp"
                            android:id="@+id/trackorderhome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_weight="2"
                            android:background="@drawable/edittext_curve_bg"
                            android:gravity="center">

                        </EditText>

                        <Button
                            android:id="@+id/trackbutton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:background="@drawable/buttonbg"
                            android:text="Track Now">

                        </Button>

                    </LinearLayout>




                </RelativeLayout>

            </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/serachText"
                android:textSize="20sp"
                android:textColor="@color/background6"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               style="@style/AVLoadingIndicatorView"
               android:visibility="visible"
               app:indicatorName="BallPulseIndicator"
               app:indicatorColor="#F57F17"
            />

        </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="5dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/light_green_200"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="20dp"
                                android:layout_gravity="center"
                                android:text="5"
                                android:inputType="number"
                                android:textSize="35sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginBottom="25dp"
                                android:layout_gravity="center"
                                android:text="Completed Order"
                                android:textSize="17sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="5dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/cyan_200"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="20dp"
                                android:layout_gravity="center"
                                android:text="0"
                                android:inputType="number"
                                android:textSize="35sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginBottom="25dp"
                                android:layout_gravity="center"
                                android:text="In Shipment"
                                android:textSize="17sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="5dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/indigo_200"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="20dp"
                                android:layout_gravity="center"
                                android:text="1"
                                android:inputType="number"
                                android:textSize="35sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginBottom="25dp"
                                android:layout_gravity="center"
                                android:text="Order Canceled"
                                android:textSize="17sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_margin="5dp"
                        android:elevation="8dp"
                        app:cardCornerRadius="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:background="@color/amber_200"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_margin="20dp"
                                android:layout_gravity="center"
                                android:text="1"
                                android:inputType="number"
                                android:textSize="35sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                            <TextView
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginBottom="25dp"
                                android:layout_gravity="center"
                                android:text="Payment In Process"
                                android:textSize="17sp"
                                android:textColor="@color/background6"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_marginTop="10dp"
                    android:id="@+id/placeorder"
                    android:padding="10dp"
                    app:iconGravity="end"
                    app:iconTint="@color/background6"
                    app:icon="@drawable/ic_baseline_local_shipping_24"
                    android:textSize="17sp"
                    android:textColor="@color/background6"
                    android:backgroundTint="@color/blue_200"
                    android:layout_gravity="center"
                    android:text="Place Order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</ScrollView>









</LinearLayout>